
<div class="row">
    <div class="col-sm-4">
        <h3>Create Categories</h3>
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" placeholder="Enter Category Name">
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Create Category</button>
        </form>
    </div>

    <br><hr>
    <div class="col-sm-8">
        <h2>Categories</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Category Name</th>
                    <th>Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{formatDate date 'DD/MM/YYYY'}}</td>
                    <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info btn-sm">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                            <button class="btn btn-danger btn-sm">Delete</button>    
                        </form>
                        
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>